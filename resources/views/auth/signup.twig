{% extends 'templates/app.twig' %}
{% block navigationBar %}

{% endblock %}
{% block content %}
    <br>
    <br>
    <br>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="panel panel-default">
             <div class="panel-heading">Sign up  / <a href="{{ path_for('auth.signin') }}">Sign in</a></div>
              <div class="panel-body">

                  <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
              <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                  <label for="email">Email</label>
                  <input type="email" name="email" id="email" class="form-control" placeholder="Email" value="{{ old.email }}" >
                  {% if errors.email  %}
                  <span class="help-block">{{ errors.email | first }}</span>
                  {% endif %}
              </div>
                      <div class="form-group {{ errors.name ? 'has-error' : '' }}">
                          <label for="name">Name</label>
                          <input type="text" name="name" id="name" class="form-control" placeholder="Name" value="{{ old.name }}">
                          {% if errors.name  %}
                              <span class="help-block">{{ errors.name | first }}</span>
                          {% endif %}
                      </div>
                      <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                          <label for="password">Password</label>
                          <input type="password" name="password" id="email" class="form-control" placeholder="Password" value="{{ old.password }}">
                          {% if errors.password  %}
                              <span class="help-block">{{ errors.password | first }}</span>
                          {% endif %}
                      </div>
                      <button type="submit" class="btn btn-default center-block" >Sign up</button>
                      {{ csrf.field | raw }}
                  </form>
              </div>
          </div>
        </div>
    </div>
{% endblock %}