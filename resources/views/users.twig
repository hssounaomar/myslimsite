{% extends "home.twig" %}
{% block content %}
<div id="page-wrapper">
    <br>
<div class="row">
    <div class="col-lg-12" style="width: 100%;">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <table id="example" class="display nowrap" style="width:100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>App</th>
                        <th>Username</th>
                        <th>ADUsername</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for row in data %}
                        <tr>
                            <td>{{ row.app }}</td>
                            <td>{{ row.username }}</td>
                            <td>{{ row.ADUsername }}</td>

                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>App</th>
                        <th>Username</th>
                        <th>ADUsername</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<div>
    <button id="send">Send</button>
</div>
</div>
    <script type="text/javascript">

        var table=  $('#example').DataTable({
            dom: 'Bfrtip',
            buttons: [
                 'excel', 'pdf'
            ]
        } );
        $('#example tbody').on( 'click', 'tr', function () {
            $(this).toggleClass('selected');
        } );
        $('#send').click( function () {
            var cars = [];

            var i;
            for(i=0;i<table.rows('.selected').data().length;i++){
                cars[i]=table.rows('.selected').data()[i];
            }
            console.log(cars);
            $.ajax({url: "/users/ajax", type:"POST", data:{msg : cars}, success: function(result){

                }});

        } );

        $('#example_filter input').on( 'keyup', function () {
            table.columns(2).search(this.value).draw();
        } );

    </script>
{% endblock %}

