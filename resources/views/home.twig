        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Users Of Application {{ app.name | upper  }}</h4>
                          </div>

            <!-- /.panel-heading -->
            <div class="container">


                <div class="demo-html"></div>
                <table id="example" class="display" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th></th>
                        {% for field in fields %}
                            <th>{{ field.name }}</th>
                        {% endfor %}
                        <th>ADUsername</th>
                    </tr>
                    </thead>
                </table>

            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
