{% block content %}
    <div id="page-wrapper">
    <br>

    <div class="row">
    <div class="col-lg-12" style="width: 100%;">
        <div class="panel panel-default">
            <div class="panel-heading">
    <div class="row">
        <div class="col-md-offset-3 col-md-2"> <a href="/apps/{{ app.name }}/delete"><i class="fa fa-trash fa-fw red" style="font-size: 18px;
  color: 	#8B0000;"></i> Delete {{ app.name | upper }}</a></div>
        <div class="col-md-offset-1 col-md-2"> <a href="/apps/{{ app.name }}/update"><i class="fa fa-edit fa-fw"></i> Update {{ app.name | upper }}</a></div>

    </div>
                          </div>

            <!-- /.panel-heading -->
            <div class="container">


                <div class="demo-html"></div>
                <table id="example" class="display" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th></th>
                        {% for field in fields %}
                            <th>{{ field.name }}</th>
                        {% endfor %}
                        <th>ADUsername</th>
                    </tr>
                    </thead>
                </table>

            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- Code script DataTable -->

    <script type="text/javascript" language="javascript" class="init">



        var editor; // use a global for the submit and return data rendering in the examples

        $(document).ready(function() {



            editor = new $.fn.dataTable.Editor( {
                ajax: "/apps/ajax/{{ app.name }}",
                table: "#example",
                fields: [



                    {
                        label: "ADUsername:",
                        name: "ADUsername"
                    }
                ]
            } );

            // Activate an inline edit on click of a table cell
            $('#example').on( 'click', 'tbody td:not(:first-child)', function (e) {
                editor.inline( this );
            } );

            $('#example').DataTable( {
                dom: "Bfrtip",
                ajax: "/apps/ajax/{{ app.name }}",
                order: [[ 1, 'asc' ]],
                columns: [
                    {
                        data: null,
                        defaultContent: '',
                        className: 'select-checkbox',
                        orderable: false
                    },
                    {% for field in fields %}
                    { data: "{{ field.name }}"},

                    {% endfor %}


                    { data: "ADUsername",className:'editable'}
                ],
                select: {
                    style:    'os',
                    selector: 'td:first-child'
                },
                buttons: [
                  'excel', 'pdf'
                ]
            } );
            $("input[type=\"search\"]").on( 'keyup', function () {



            } );
                    } );



    </script>
    </div>
    </div>
    <input type="button" id="btnOpenDialog" value="Open Confirm Dialog" />
    <div id="dialog-confirm"></div>

{% endblock %}